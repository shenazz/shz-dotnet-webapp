@page "/Events/{eventId}/Registrations/Edit/{id}"
@model EventRegistrationApp.Pages.Events.Registrations.EditModel

@{
    ViewData["Title"] = "Edit Registration";
}

<h1>Edit Registration</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="EventRegistration.Id" />
            <div class="form-group mb-3">
                <label asp-for="EventRegistration.Name" class="control-label"></label>
                <input asp-for="EventRegistration.Name" class="form-control" />
                <span asp-validation-for="EventRegistration.Name" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="EventRegistration.PhoneNumber" class="control-label"></label>
                <input asp-for="EventRegistration.PhoneNumber" class="form-control" />
                <span asp-validation-for="EventRegistration.PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="EventRegistration.Email" class="control-label"></label>
                <input asp-for="EventRegistration.Email" class="form-control" />
                <span asp-validation-for="EventRegistration.Email" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="EventRegistration.EventId" class="control-label"></label>
                <input asp-for="EventRegistration.EventId" class="form-control" readonly />
            </div>
            <div class="form-group mb-3">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="/Events/Details" asp-route-id="@Model.EventRegistration.EventId">Back to Event Details</a> |
    <a asp-page="/Events/Index">Back to Events</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
