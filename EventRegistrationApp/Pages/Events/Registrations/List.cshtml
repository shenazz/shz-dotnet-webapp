@page "/Events/{eventId}/Registrations"
@model EventRegistrationApp.Pages.Events.ListModel

@{
    ViewData["Title"] = "Event Registrations";
}

<h1>Registrations - @Model.Event.Name</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.EventRegistration[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EventRegistration[0].PhoneNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EventRegistration[0].Email)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.EventRegistration)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PhoneNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    <a href="/Events/@item.EventId/Registrations/Edit/@item.Id">Edit</a> |
                    <a href="/Events/@item.EventId/Registrations/Delete/@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
